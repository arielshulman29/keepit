<% layout('layouts/boilerplate') %>
    <div class="container d-flex justify-content-center align-items-center mt-5 mb-3">
        <div class="card shadow col-12 col-md-6">
            <div class="card-body">
                <h5 class="card-title">הרשמה למערכת</h5>
                <form action="/user/register" method="POST" class="validated-form" name="register">
                    <div class="mb-3">
                        <label class="form-label" for="username">שם משתמש</label>
                        <input class="form-control" type="text" id="username" name="username" autofocus required>
                    </div>

                    <div class="mb-3">
                        <label for="email" class="form-label">אימייל</label>
                        <input type="email" name="email" id="email" class="form-control" required>
                    </div>

                    <div class="mb-4">
                        <label class="form-label" for="password">סיסמא</label>
                        <input class="form-control" type="password" id="password" name="password" required>
                    </div>

                    <div class="mb-3 text-center">
                        <button class="btn btn-success btn-block">כניסה</button>
                    </div>

                    <div class="text-center mb-3">
                        <a href="/user/login">כבר נרשמת?</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <script src="/js/user-form.js"></script>